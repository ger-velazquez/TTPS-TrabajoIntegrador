<p id="notice"><%= notice %></p>
<%= stylesheet_link_tag "notes" %>
<div>
  <h1 class="text-center notes-main-title">Notes</h1>
  <div>
    <%= form_with url: "/notes", method: :get do |f| %>
      <%= f.select("book", options_for_select(@books_titles, @filter_book) ) %>
      <%= f.submit "Filter" %>
    <% end %>
    
  </div>
    
  <div class="new-note-ref">
    <%= link_to 'New Note', new_note_path %>
  </div>


  <div class='cards-notes'>

    <% @notes.each do |note| %>

      <div class="card custom-card">
        <div class="card-header">
        <div class='note-title'>
          <%= note['title'] %>
        </div>
          <div class='d-flex justify-content-end'>
            <span style="font-weight: bolder">Belongs to the book - </span> <%= @books_and_notes_titles[note['id']] %>
          </div>
        </div>
        <div class="card-body">
          <div class="note-content">
            <%= note.content %>
          </div>

          <div class='row justify-content-end'>
            <div class='margin-right-1 crud-items'> <%= link_to 'Show', note %> </div>
            <div class='margin-right-1 crud-items'> <%= link_to 'Edit', edit_note_path(note) %> </div>
            <div class='margin-right-1 crud-items'> <%= link_to 'Delete', note, method: :delete, data: { confirm: 'Are you sure?' } %> </div>
          </div>

        </div>
      </div>

    <% end %>

  </div>


  <br>
</div>



